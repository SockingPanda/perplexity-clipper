{
  "manifest_version": 3,
  "name": "Perplexity → Markdown",
  "version": "0.1.0",
  "description": "将 Perplexity.ai 文章一键转换为 Markdown",
  "action": { "default_popup": "popup.html" },

  "content_scripts": [
    {
      "matches": ["https://www.perplexity.ai/page/*"],
      "js": ["content-perplexity.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["activeTab", "scripting", "clipboardWrite", "downloads"],
  "host_permissions": ["https://www.perplexity.ai/page/*"]
}
